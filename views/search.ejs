<%- include('partials/header') %>
<section>
  <h2>Search Foods</h2>
  <form method="get" action="/foods/search">
    <input name="q" placeholder="Search by name" value="<%= q %>" />
    <button type="submit">Search</button>
  </form>

  <% if (foods.length === 0) { %>
    <p>No results.</p>
  <% } else { %>
    <table>
      <thead><tr><th>Name</th><th>Calories</th><th>Protein</th><th>Carbs</th><th>Fats</th></tr></thead>
      <tbody>
        <% foods.forEach(function(f){ %>
          <tr>
            <td><%= f.name %></td>
            <td><%= f.calories %></td>
            <td><%= f.protein %></td>
            <td><%= f.carbs %></td>
            <td><%= f.fats %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</section>
<%- include('partials/footer') %>
