<%- include('partials/header') %>
<section>
  <h2>Add Food</h2>
  <% if (error) { %><p class="error"><%= error %></p><% } %>
  <form method="post" action="/foods/add">
    <label>Name:<input name="name" required /></label><br/>
    <label>Calories:<input name="calories" type="number" step="1" required /></label><br/>
    <label>Protein (g):<input name="protein" type="number" step="0.1" required /></label><br/>
    <label>Carbs (g):<input name="carbs" type="number" step="0.1" required /></label><br/>
    <label>Fats (g):<input name="fats" type="number" step="0.1" required /></label><br/>
    <button type="submit">Add Food</button>
  </form>
</section>
<%- include('partials/footer') %>
